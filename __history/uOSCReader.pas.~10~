  end;


  var
  fRealLength, fCaptureLength: DWORD;

  DataIsReady: Boolean;
  DeviceIsReady: Boolean;
  OSCDoubleBuff: PDoubleArray;
  ReadBytesFromOSC: DWORD;
  ChannelNum: Integer;

//  function SetOscSample(Sample: DWORD): Integer; stdcall;
